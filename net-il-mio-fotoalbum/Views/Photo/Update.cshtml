@model PhotoFormModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3 text-success">Modifica foto</h1>
            </div>
            <form asp-controller="Photo" asp-action="Update" asp-route-id="@Model.Photos.Id" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Photos.Id" />
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Photos.Title" class="d-block w-100" />
                    <span asp-validation-for="Photos.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <textarea asp-for="Photos.Description" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Photos.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="Photos.Image" class="d-block w-100" />
                    <span asp-validation-for="Photos.Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="my-3">
                        <img src="@Model.Photos.ImageSrc"/>

                    </div>
                    <label asp-for="ImageFormFile">Image file</label>
                    <input type="file" asp-for="ImageFormFile" />
                    <span asp-validation-for="ImageFormFile" class="text-error"></span>
                </div>

                <!-- SELECT MULTIPLA PER LE CATEGORIE -->
                <div class="mb-3">
                    <strong>Ingredienti:</strong>
                    <select asp-for="SelectedCategoryId"
                            multiple="multiple"
                            size="10"
                            class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                            asp-items="@Model.Categories">
                    </select>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Aggiorna">
                </div>
            </form>
        </div>
    </div>
</div>